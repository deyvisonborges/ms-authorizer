{
  "name": "archetype-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -b",
    "start": "npm run build && node ./dist/index.js",
    "start:dev": "ts-node-dev ./src/index.ts",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "test": "jest",
    "test:e2e": "jest --projects ./tests/e2e --runInBand",
    "test:integration": "jest --projects ./tests/integration --runInBand",
    "gen:schema": "awk 1 ./prisma/schemas/*.prisma >> ./prisma/schema.prisma && npx prisma format"
  },
  "author": {
    "name": "Deyvison Borges",
    "url": "https://github.com/deyvisonborges"
  },
  "license": "ISC",
  "dependencies": {
    "module-alias": "^2.2.2",
    "prisma": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  }
}
